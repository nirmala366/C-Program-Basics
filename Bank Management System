#include <stdio.h>

float balance = 1000.0;

void deposit(float amount) {
    balance += amount;
    printf("Deposited %.2f | New Balance: %.2f\n", amount, balance);
}

void withdraw(float amount) {
    if (amount > balance) {
        printf("Insufficient Balance!\n");
    } else {
        balance -= amount;
        printf("Withdrew %.2f | New Balance: %.2f\n", amount, balance);
    }
}

void checkBalance() {
    printf("Current Balance: %.2f\n", balance);
}

int main() {
    int choice;
    float amount;

    do {
        printf("\n--- Bank Menu ---\n1. Deposit\n2. Withdraw\n3. Check Balance\n4. Exit\nEnter choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: printf("Enter amount: "); scanf("%f", &amount); deposit(amount); break;
            case 2: printf("Enter amount: "); scanf("%f", &amount); withdraw(amount); break;
            case 3: checkBalance(); break;
            case 4: return 0;
            default: printf("Invalid choice!\n");
        }
    } while (1);

    return 0;
}
