#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp;
    char text[200];
    int choice;

    do {
        printf("\n--- Mini Notepad ---\n");
        printf("1. Write Note\n2. Read Notes\n3. Exit\nEnter choice: ");
        scanf("%d", &choice);
        getchar(); // clear buffer

        if (choice == 1) {
            fp = fopen("notes.txt", "a");
            printf("Enter your note: ");
            fgets(text, sizeof(text), stdin);
            fputs(text, fp);
            fclose(fp);
            printf("Note Saved!\n");
        } 
        else if (choice == 2) {
            fp = fopen("notes.txt", "r");
            printf("\n--- Notes ---\n");
            while (fgets(text, sizeof(text), fp)) {
                printf("%s", text);
            }
            fclose(fp);
        }
    } while (choice != 3);

    return 0;
}
