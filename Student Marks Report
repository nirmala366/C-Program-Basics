#include <stdio.h>

struct Student {
    char name[50];
    int marks[3];
    float avg;
};

int main() {
    int n;
    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n];

    for (int i = 0; i < n; i++) {
        printf("\nEnter name: ");
        scanf("%s", s[i].name);
        int total = 0;
        for (int j = 0; j < 3; j++) {
            printf("Enter marks in subject %d: ", j + 1);
            scanf("%d", &s[i].marks[j]);
            total += s[i].marks[j];
        }
        s[i].avg = total / 3.0;
    }

    printf("\n--- Student Report ---\n");
    for (int i = 0; i < n; i++) {
        printf("%s | Average: %.2f\n", s[i].name, s[i].avg);
    }

    return 0;
}
